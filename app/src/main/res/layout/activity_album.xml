<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumActivity"
    android:background="#17298A"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Our Websites"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:background="#DD2C00"
            android:gravity="center"
            android:padding="15dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/daraz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="Daraz"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/bottom_curved"
            android:textColor="@color/white"
            android:padding="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shajgoj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="Shajgoj"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/bottom_curved"
            android:textColor="@color/white"
            android:padding="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bongoBazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="Bongo Bazar"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/bottom_curved"
            android:textColor="@color/white"
            android:padding="10dp"
            />

    </LinearLayout>

</ScrollView>